@page "/artwork/{id:int}"
@inject NavigationManager NavigationManager


 <CascadingAuthenticationState>
        <AuthorizeView>
        <Authorized>
            <PageTitle>Artwork Details</PageTitle>

            <div class="details-container">
                <div class="artwork-header">
                    <img src="@Artwork.ImageUrl" alt="@Artwork.Name" />
                    <div class="artwork-info">
                        <h2>@Artwork.Name</h2>
                        <p>@Artwork.Medium</p>
                        <p>@Artwork.Description</p>
                        <p class="status-tag @(Artwork.Status == "SOLD" ? "status-sold" : Artwork.Status == "PENDING" ? "status-pending" : "status-bid")">
                            @Artwork.Status
                        </p>
                        <div class="author-info">
                            <div class="profile-pic"></div>
                            <span>@Artwork.Author</span>
                        </div>
                    </div>
                </div>

                <div class="similar-section">
                    <h3>Similar Artworks</h3>
                    <div class="similar-artworks">
                        @foreach (var similarArtwork in SimilarArtworks)
                        {
                            <div class="similar-artwork-item" @onclick="() => NavigateToArtwork(similarArtwork.Id)">
                                <img src="@similarArtwork.ImageUrl" alt="@similarArtwork.Name" />
                                <p>@similarArtwork.Name</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </Authorized>
    </AuthorizeView>
</CascadingAuthenticationState>

