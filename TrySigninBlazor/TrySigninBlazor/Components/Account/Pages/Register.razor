            </div>
            <div class="form-floating mb-3">
                <InputText @bind-Value="Input.Last_name" class="form-control" autocomplete="username" aria-required="true" placeholder="Cobbs" />
                <label for="last-name">Last name</label>
                <ValidationMessage For="() => Input.Last_name" class="text-danger" />
            </div>
            <div class="form-floating mb-3">
                <InputText @bind-Value="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label for="email">Email</label>
                <ValidationMessage For="() => Input.Email" class="text-danger" />
            </div>
            <div class="form-floating mb-3">
                <InputSelect @bind-Value="Input.Role" class="form-control" aria-required="true" id="role">
                    <option value="">--Select role--</option>
                    <option value="Artist">Artist</option>
                    <option value="Gallery">Gallery</option>
                    <option value="Curator">Curator</option>
                    <option value="Admirer">Admirer</option>
                </InputSelect>
                <label for="role">Role</label>
                <ValidationMessage For="() => Input.Role" class="text-danger" />
            </div>
