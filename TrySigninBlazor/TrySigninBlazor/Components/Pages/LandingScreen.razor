@page "/"
@inject NavigationManager navMan
@using Microsoft.AspNetCore.Authorization

<CascadingAuthenticationState>
    <AuthorizeView>
        <NotAuthorized>
            <div class="landing-container">
                <div class="hero-section">
                    <h1>Welcome to ArtHub</h1>
                    <p class="hero-subtitle">Share your art, explore inspiring creations, and connect with a community of artists.</p>
                   <p style="margin-top: 10px;">
                        <a href="/Account/Register" class="btn btn-primary">Join our community</a>
                    </p>
                </div>
                <div class="about-section">
                    <h2>About ArtHub</h2>
                    <p>ArtHub is the platform where creativity thrives. We believe in the power of art to bring people together, inspire, and create change. Join us and discover your new favorite art community.</p>
                </div>
                <div class="features-section">
                    <h2>Why Join ArtHub?</h2>
                    <div class="feature-grid">
                        <div class="feature-card">
                            <h3>Share Your Art</h3>
                            <p>Upload your masterpieces and showcase your unique style to the world.</p>
                        </div>
                        <div class="feature-card">
                            <h3>Engage with Artists</h3>
                            <p>Connect, message, and collaborate with other artists who share your passion.</p>
                        </div>
                        <div class="feature-card">
                            <h3>Discover New Art</h3>
                            <p>Browse a magnificent collection of artworks, updated by our community every day.</p>
                        </div>
                    </div>
                </div>

                <div class="spotlight-section">
                    <h2>Featured Artist of the Month</h2>
                    <div class="spotlight">
                        <img src="img/Avator.jpeg" alt="Featured Artist" class="spotlight-image" />
                        <div class="spotlight-info">
                            <h3>Luyanda Zondi</h3>
                            <p>Creating surreal digital art, Luyanda Jordan pushes the boundaries of imagination. Follow and support Luyanda’s journey on ArtHub.</p>
                           
                            <p style="margin-top: 10px;">
                                <a href="/Account/Register" class="btn btn-primary">View Luyanda's Gallery</a>
                            </p>
                        </div>
                    </div>
                </div>

                <footer class="footer">
                    <p>© 2024 ArtHub. All Rights Reserved. | Follow us on social media for the latest updates.</p>
                </footer>
            </div>

        </NotAuthorized>
        <Authorized>
            <div class="landing-page">
                <section class="hero-section">
					<h1>Welcome to ArtHub</h1>
                    <p>Your creative sanctuary for sharing, discovering, and celebrating art.</p>
                    <p><a href="/explorer" class="cta-button">Get Started Today</a></p>
                </section>

                <section class="mission-section">
                    <h2>Our Mission</h2>
                    <p>At we believe in the transformative power of art. Our mission is to create a space where artists from all walks of life can share their work, inspire one another, and find their creative voice in a supportive, passionate community.</p>
                </section>

                <section class="community-section">
                    <h2>A Thriving Community</h2>
                    <p>Join a diverse community of artists, collectors, and art lovers. Every member brings unique perspectives, creating a dynamic environment for growth and collaboration.</p>
                    <div class="community-stats">
                        <div class="stat">
                            <h3>10K+</h3>
                            <p>Artists</p>
                        </div>
                        <div class="stat">
                            <h3>50K+</h3>
                            <p>Artworks</p>
                        </div>
                        <div class="stat">
                            <h3>20+</h3>
                            <p>Countries</p>
                        </div>
                    </div>
                </section>

                <section class="benefits-section">
                    <h2>Why ArtHub?</h2>
                    <div class="benefits-grid">
                        <div class="benefit">
                            <h3>Build Your Portfolio</h3>
                            <p>Create a professional profile, upload your artwork, and showcase your talent to a global audience.</p>
                        </div>
                        <div class="benefit">
                            <h3>Network with Peers</h3>
                            <p>Engage in discussions, join groups, and connect with artists who inspire you.</p>
                        </div>
                        <div class="benefit">
                            <h3>Stay Inspired</h3>
                            <p>Access curated art collections, learn new techniques, and participate in regular challenges.</p>
                        </div>
                        <div class="benefit">
                            <h3>Sell Your Art</h3>
                            <p>Reach potential buyers who appreciate original artwork, and earn from your passion.</p>
                        </div>
                    </div>
                </section>

                <section class="testimonials-section">
                    <h2>What Our Members Are Saying</h2>
                    <div class="testimonials">
                        <div class="testimonial">
                            <p>“ArtHub has given me a platform to share my art with a community that truly appreciates creativity. I've gained new friends and opportunities!”</p>
                            <p class="author">– Amber A.</p>
                        </div>
                        <div class="testimonial">
                            <p>“Being part of ArtHub has been a transformative experience. I’m constantly inspired by the talent and positivity in this community.”</p>
                            <p class="author">– Junior Z.</p>
                        </div>
                    </div>
                </section>

                <footer class="footer">
                    <p>© 2024 ArtHub | Connect with us on social media for news, updates, and more.</p>
                </footer>
            </div>
        </Authorized>
    </AuthorizeView>
</CascadingAuthenticationState>
