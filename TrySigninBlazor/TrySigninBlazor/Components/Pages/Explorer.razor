@page "/explorer"
@inject NavigationManager NavigationManager


<CascadingAuthenticationState>
        <AuthorizeView>
        <Authorized>
            <h1>Explore Artworks</h1>
            <div class="explorer-container">
                @foreach (var artwork in Artworks)
                {
                    <div class="image-item" @onclick="() => NavigateToArtwork(artwork.Id)">
                        <img src="@artwork.ImageUrl" alt="@artwork.Name" />
                    </div>
                }
            </div>
         </Authorized>
        <NotAuthorized>
            <div style="text-align: center; margin-top: 50px;">
                <div class="alert alert-danger">
                    You are not allowed on this page. Please log in to access the content.
                </div>
                <img src="/img/notallowed.jpg" alt="Access Denied" style="max-width: 300px; height: auto; margin-top: 20px;" />
                <p style="margin-top: 10px;">
                    <a href="/Account/Login" class="btn btn-primary">Go to Login</a>
                </p>
            </div>

        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>

